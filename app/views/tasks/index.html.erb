<h1>Tasks for <%= @category.name %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, category_task_path(@category, task) %></td>
        <td><%= task.description %></td>
        <td>
          <%= link_to 'Edit', edit_category_task_path(@category, task) %>
          <%= link_to 'Delete', category_task_path(@category, task), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_category_task_path(@category) %>
<%= link_to 'Back to Categories', categories_path %>
