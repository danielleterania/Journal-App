<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td>
          <%= link_to 'Show Tasks', category_tasks_path(category), class: 'btn btn-primary' %>
          <%= link_to 'Tasks for Today', today_category_tasks_path(category), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary' %>
          <%= button_to 'Delete', category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
