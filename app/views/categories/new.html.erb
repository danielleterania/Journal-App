<h1>Edit Task for <%= @category.name %></h1>

<%= form_with(model: [@category, @task], local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit 'Update Task' %>
  </div>
<% end %>

<%= link_to 'Back', category_tasks_path(@category) %>
